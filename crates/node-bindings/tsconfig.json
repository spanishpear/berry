{
	"compilerOptions": {
		"target": "ESNext",
		"strict": true,
		"moduleResolution": "nodenext",
		"module": "nodenext",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true
	},
	"include": ["."],
	"exclude": ["node_modules", "benchmark", "__test__"]
}
